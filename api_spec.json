            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "number"
                },
                "message": {
                  "type": "string"
                },
                "data": {
                  "type": "null"
                }
              }
            },
            "example": {
              "status": 401,
              "message": "UNAUTHORIZED",
              "data": null
            }
          }
        }
      },
      "404-NotFound": {
        "description": "Data not found",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "number"
                },
                "message": {
                  "type": "string"
                },
                "data": {
                  "type": "null"
                }
              }
            },
            "example": {
              "status": "404",
              "message": "NOT FOUND",
