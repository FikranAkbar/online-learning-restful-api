    "version": "1.0.0",
    "contact": {
      "name": "Fikran Akbar",
      "email": "fikranakbar756@gmail.com"
    }
  },
  "servers": [
    {
      "url": "http://{environment}/api",
      "variables": {
        "environment": {
          "default": "localhost:8000",
          "description": "Online Learning RESTful API Server",
          "enum": [
            "localhost:8000"
          ]
        }
      }
    }
